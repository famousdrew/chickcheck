generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  flocks       Flock[]
}

model Flock {
  id              String           @id @default(cuid())
  name            String           @default("My Flock")
  startDate       DateTime?
  currentWeek     Int              @default(0)
  status          FlockStatus      @default(PREPARING)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  userId          String
  chicks          Chick[]
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskCompletions TaskCompletion[]

  @@index([userId])
}

model Task {
  id              String           @id @default(cuid())
  title           String
  description     String
  detailedContent String
  weekNumber      Int
  dayNumber       Int?
  frequency       TaskFrequency
  category        TaskCategory
  sortOrder       Int              @default(0)
  createdAt       DateTime         @default(now())
  completions     TaskCompletion[]

  @@index([weekNumber])
  @@index([weekNumber, dayNumber])
}

model TaskCompletion {
  id          String    @id @default(cuid())
  completedAt DateTime  @default(now())
  undoneAt    DateTime?
  notes       String?
  dayDate     DateTime
  flockId     String
  taskId      String
  flock       Flock     @relation(fields: [flockId], references: [id], onDelete: Cascade)
  task        Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([flockId, taskId, dayDate])
  @@index([flockId])
  @@index([taskId])
}

model Chick {
  id          String       @id @default(cuid())
  name        String
  breed       String?
  hatchDate   DateTime?
  description String?      @db.VarChar(500)
  photoUrl    String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  flockId     String
  flock       Flock        @relation(fields: [flockId], references: [id], onDelete: Cascade)
  notes       ChickNote[]
  photos      ChickPhoto[]

  @@index([flockId])
}

model ChickPhoto {
  id           String   @id @default(cuid())
  imageUrl     String
  thumbnailUrl String
  takenAt      DateTime @default(now())
  weekNumber   Int?
  createdAt    DateTime @default(now())
  chickId      String
  chick        Chick    @relation(fields: [chickId], references: [id], onDelete: Cascade)

  @@index([chickId])
  @@index([chickId, takenAt])
}

model ChickNote {
  id         String   @id @default(cuid())
  content    String   @db.VarChar(1000)
  weekNumber Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  chickId    String
  chick      Chick    @relation(fields: [chickId], references: [id], onDelete: Cascade)

  @@index([chickId])
  @@index([chickId, createdAt])
}

enum FlockStatus {
  PREPARING
  ACTIVE
  GRADUATED
}

enum TaskFrequency {
  DAILY
  WEEKLY
  ONCE
}

enum TaskCategory {
  BROODER_CARE
  FEEDING_WATER
  HEALTH_CHECK
  ENVIRONMENT
  MILESTONE
  PREPARATION
}
